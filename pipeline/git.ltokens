use
git_add
,
git_add_all
,
git_commit
,
git_commit_default
,
git_push
,
git_push_upstream
;
fn
git
(
files
:
String
,
message
:
String
,
upstream
:
String
)
{
if
files
==
null
{
git_add_all
(
)
;
}
else
{
git_add
(
files
)
;
}
if
message
==
null
{
git_commit_default
(
)
;
}
else
{
git_commit
(
message
)
;
}
if
upstream
==
null
{
git_push_upstream
(
)
;
}
else
{
git_push
(
upstream
)
;
}
}